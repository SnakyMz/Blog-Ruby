<section class='userList'>
  <h1>List of Users</h1>
  <% @users.each do |user| %>
    <div class='userCard'>
      <div>
        <img src=<%= user.photo %> alt='User Image' class='userPhoto'>
      </div>
      <div class='userInfo'>
        <h2 class='userHead'><a href=<%= user_path(user)%>><%= user.name %></a></h2>
        <p>Number of posts: <%= user.posts_counter.nil? ? 0 : user.posts_counter %></p>
      </div>
    </div>
  <% end %>
</section>
